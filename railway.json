{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd EcommerceAPI && dotnet restore && dotnet publish -c Release -o out"
  },
  "deploy": {
    "startCommand": "cd EcommerceAPI/out && dotnet EcommerceAPI.dll",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
