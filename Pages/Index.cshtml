@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

Welcome to Our Store!<br />
Discover amazing products at unbeatable prices.<br />
<a href="/Products">Start Shopping</a>

<hr />

Features:<br />
<ul>
    <li>
        Browse Products: <a href="/Products">Shop Now</a>
    </li>
    <li>
        Your Cart: <a href="/Cart">View Cart</a>
    </li>
    <li>
        Account:
        <span class="auth-guest">
            <a href="/Login">Login</a> |
            <a href="/Register">Register</a>
        </span>
        <span class="auth-user">
            Welcome back!
        </span>
    </li>
</ul>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            showForAuth('.auth-user');
            showForGuest('.auth-guest');
        });
    </script>
}
