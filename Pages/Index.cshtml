@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<h2>Welcome to Our Store!</h2>
<p>Discover amazing products at unbeatable prices.</p>
<p><a href="/Products">Start Shopping</a></p>

<hr />

<h3>Features</h3>
<ul>
    <li>
        Browse Products: <a href="/Products">Shop Now</a>
    </li>
    <li>
        Your Cart: <a href="/Cart">View Cart</a>
    </li>
    <li>
        Account:
        <span class="auth-guest">
            <a href="/Login">Login</a> |
            <a href="/Register">Register</a>
        </span>
        <span class="auth-user">
            Welcome back!
        </span>
    </li>
</ul>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            showForAuth('.auth-user');
            showForGuest('.auth-guest');
        });
    </script>
}
